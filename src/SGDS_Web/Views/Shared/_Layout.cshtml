<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SGDS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SGDS_Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
</head>
<body>
    <div class="sidebar">
        <a asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> Home</a>
        <a asp-controller="Dashboard" asp-action="Index"><i class="fas fa-chart-line"></i> Dashboard</a>
        <a asp-controller="Donneur" asp-action="Index"><i class="fas fa-user"></i> Donneurs</a>
        <a asp-controller="Dons" asp-action="Index"><i class="fas fa-tint"></i> Dons</a>
        <a asp-controller="Collectes" asp-action="Index"><i class="fas fa-hand-holding-medical"></i> Collectes</a>
        <a asp-controller="Centres" asp-action="Index"><i class="fas fa-hospital"></i> Centres</a>
        <a asp-controller="Dossiers" asp-action="Index"><i class="fas fa-folder"></i> Dossiers</a>
        <a asp-controller="Users" asp-action="Index"><i class="fas fa-users"></i> Users</a>
        <a asp-controller="Roles" asp-action="Index"><i class="fas fa-user-shield"></i> Roles</a>
        <a asp-controller="Home" asp-action="Privacy"><i class="fas fa-user-secret"></i> Privacy</a>
    </div>

    <div class="top-navbar">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SGDS</a>
        <div class="auth-links">
            <partial name="_LoginPartial" />
        </div>
    </div>

    <div class="main-content">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="text-muted text-center">
        &copy; 2025 SGDS — Tous droits réservés.
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(function () {
            $('.js-select2').select2({
                placeholder: "Tapez pour filtrer…",
                allowClear: true,
                width: '100%'
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
