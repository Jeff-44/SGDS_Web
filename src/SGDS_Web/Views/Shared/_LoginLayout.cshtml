<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SGDS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

    <style>
        :root {
            /* sera mis à jour en JS pour refléter la hauteur du footer */
            --footer-h: 0px;
        }

        /* Centrage vertical/horizontal + fond plein écran */
        .main-content {
            min-height: calc(100vh - var(--footer-h));
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            overflow: hidden; /* évite un scroll horizontal si l'image dépasse */
        }
            /* Image de background avec opacité 0.5–0.8 */
            .main-content::before {
                content: "";
                position: absolute;
                inset: 0;
                background: url('/images/login.jpg') center/cover no-repeat;
                opacity: 0.6; /* ajuste entre 0.5 et 0.8 */
                z-index: -1;
            }

        html, body {
            height: 100%;
            margin: 0;
        }

        /* Carte login (optionnel : une ombre douce) */
        .login-card {
            box-shadow: 0 12px 40px rgba(0,0,0,0.12);
            border-radius: 1rem; /* ~ rounded-4 */
            background: #fff;
        }

        .login-card-container {
            max-width: 80rem; /* largeur fixe max */
            width: 100%;
        }

        /* Bouton "Se connecter" : hover ease vers rouge plus profond */
        .btn-danger {
            background-color: #dc3545;
            border: none;
            transition: background-color 0.3s ease, transform 0.15s ease;
        }

            .btn-danger:hover {
                background-color: #b02a37;
                transform: translateY(-1px);
            }

            .btn-danger:active {
                transform: translateY(0);
            }

        /* Liens sans soulignement (et rien d'autre ne change) */
        body.login-page a {
            text-decoration: none;
        }

            body.login-page a:hover {
                text-decoration: underline; /* petit feedback visuel au survol */
            }

        /* Assure la pleine largeur sur mobile pour le contenu principal */
        main[role="main"] {
            width: 100%;
        }

        /* Footer discret */
        footer {
            padding: .75rem 0;
        }
    </style>
</head>
<body class="login-page">
    <div class="main-content">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        // Init Select2 (si nécessaire ailleurs)
        $(function () {
            $('.js-select2').select2({
                placeholder: "Tapez pour filtrer…",
                allowClear: true,
                width: '100%'
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
