@using SGDS_Web.ViewModels.Dons
@model CreerModifierDon

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Don</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DonneurId" class="control-label"></label>
                <select asp-for="DonneurId" class ="form-control js-select2" asp-items="Model.Donneurs">
                    <option>--Selectionner le NIF du donneur--</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="CollecteId" class="control-label"></label>
                <select asp-for="CollecteId" class ="form-control" asp-items="@Model.Collectes">
                    <option>--Selectionner une collecte--</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Volume" class="control-label"></label>
                <input asp-for="Volume" class="form-control" />
                <span asp-validation-for="Volume" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="TestePositifPourMaladie" /> @Html.DisplayNameFor(model => model.TestePositifPourMaladie)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
