@using SGDS_Web.ViewModels.Dons
@model IEnumerable<DonVM>

@{
    ViewData["Title"] = "Dons";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">
            <i class="fas fa-tint text-danger me-2"></i>Dons
        </h3>
        <a asp-action="Create" class="btn btn-danger">
            <i class="fas fa-plus"></i> Créer un don
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Donneur)</th>
                            <th>@Html.DisplayNameFor(model => model.Collecte)</th>
                            <th>@Html.DisplayNameFor(model => model.Volume)</th>
                            <th>@Html.DisplayNameFor(model => model.TestePositifPourMaladie)</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@(item?.Donneur?.NIF ?? "-")</td>
                                    <td>@(item?.Collecte?.Id.ToString() ?? "-")</td>
                                    <td>@(item?.Volume.ToString() ?? "-")</td>
                                    <td>
                                        <span class="badge @(item?.TestePositifPourMaladie == true ? "bg-danger" : "bg-secondary")">
                                            @(item?.TestePositifPourMaladie == true ? "Oui" : "Non")
                                        </span>
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-end gap-1">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Modifier">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Détails">
                                                <i class="fas fa-info-circle"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Supprimer">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted py-4">
                                    Aucun don trouvé.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
