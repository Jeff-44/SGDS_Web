@using SGDS_Web.ViewModels.Dons
@model CreerModifierDon

@{
    ViewData["Title"] = "Modifier un don";
}

<div class="container mt-4">
    <h3 class="mb-4">
        <i class="fas fa-tint text-danger me-2"></i>Modifier don @Model.Id
    </h3>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <form asp-action="Edit" method="post" novalidate>
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row g-3">
                    <!-- Donneur -->
                    <div class="col-md-6">
                        <label asp-for="DonneurId" class="form-label">Donneur (NIF)</label>
                        <select asp-for="DonneurId" class="form-select js-select2" asp-items="Model.Donneurs">
                            <option value="">-- Sélectionner le NIF du donneur --</option>
                        </select>
                        <span asp-validation-for="DonneurId" class="text-danger"></span>
                    </div>

                    <!-- Collecte -->
                    <div class="col-md-6">
                        <label asp-for="CollecteId" class="form-label">Collecte</label>
                        <select asp-for="CollecteId" class="form-select" asp-items="Model.Collectes">
                            <option value="">-- Sélectionner une collecte --</option>
                        </select>
                        <span asp-validation-for="CollecteId" class="text-danger"></span>
                    </div>

                    <!-- Volume -->
                    <div class="col-md-6">
                        <label asp-for="Volume" class="form-label">Volume (ml)</label>
                        <div class="input-group">
                            <input asp-for="Volume" class="form-control" inputmode="numeric" />
                            <span class="input-group-text">ml</span>
                        </div>
                        <span asp-validation-for="Volume" class="text-danger"></span>
                    </div>

                    <!-- Test positif -->
                    <div class="col-md-6 d-flex align-items-end">
                        <div class="form-check">
                            <input class="form-check-input" asp-for="TestePositifPourMaladie" id="testPositif" />
                            <label class="form-check-label" for="testPositif">
                                @Html.DisplayNameFor(m => m.TestePositifPourMaladie)
                            </label>
                        </div>
                    </div>
                </div>

                <div class="mt-3 d-flex flex-column flex-sm-row gap-2">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-save"></i> Enregistrer
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Retour à la liste
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Optionnel : initialisation Select2 si présent
        $(function () {
            if ($.fn.select2) {
                $('.js-select2').select2({
                    width: '100%',
                    placeholder: '-- Sélectionner le NIF du donneur --',
                    allowClear: true
                });
            }
        });
    </script>
}
