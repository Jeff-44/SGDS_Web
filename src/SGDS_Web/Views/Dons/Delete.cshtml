@using SGDS_Web.ViewModels.Dons
@model DonVM

@{
    ViewData["Title"] = "Suppression du don";
}

<div class="container mt-4">
    <h3 class="mb-4">
        <i class="fas fa-tint text-danger me-2"></i>Suppression du don @Model.Id
    </h3>

    <div class="alert alert-warning">
        <strong>Attention !</strong> Êtes-vous sûr de vouloir supprimer ce don ? Cette action est irréversible.
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="row g-4">
                <!-- Donneur -->
                <div class="col-md-4">
                    <strong>Donneur (NIF)</strong>
                    <div>@(Model?.Donneur?.NIF ?? "-")</div>
                </div>

                <!-- Collecte -->
                <div class="col-md-4">
                    <strong>Collecte</strong>
                    <div>@(Model?.Collecte?.Id.ToString() ?? "-")</div>
                </div>

                <!-- Volume -->
                <div class="col-md-4">
                    <strong>Volume (ml)</strong>
                    <div>@(Model?.Volume.ToString() ?? "-")</div>
                </div>

                <!-- Teste positif -->
                <div class="col-md-4">
                    <strong>Test positif à une maladie</strong>
                    <div>
                        <span class="badge @(Model?.TestePositifPourMaladie == true ? "bg-danger" : "bg-secondary")">
                            @(Model?.TestePositifPourMaladie == true ? "Oui" : "Non")
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-3 d-flex flex-column flex-sm-row gap-2">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash-alt"></i> Supprimer
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour à la liste
        </a>
    </form>
</div>
