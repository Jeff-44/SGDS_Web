@using SGDS_Web.ViewModels.Dons
@model DonVM

@{
    ViewData["Title"] = "Détails du don";
}

<div class="container mt-4">
    <h3 class="mb-4">
        <i class="fas fa-tint text-danger me-2"></i>Détails du don
    </h3>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="row g-4">
                <!-- Donneur -->
                <div class="col-md-4">
                    <strong>Donneur (NIF)</strong>
                    <div>@(Model?.Donneur?.NIF ?? "-")</div>
                </div>

                <!-- Collecte -->
                <div class="col-md-4">
                    <strong>Collecte</strong>
                    <div>
                        @(Model?.Collecte?.Id.ToString() ?? "-")
                        @* Si tu as une date de collecte: @(Model?.Collecte?.DateCollecte?.ToString("dd/MM/yyyy") ?? "-") *@
                    </div>
                </div>

                <!-- Volume -->
                <div class="col-md-4">
                    <strong>Volume (ml)</strong>
                    <div>@(Model?.Volume.ToString() ?? "-")</div>
                </div>

                <!-- Teste positif -->
                <div class="col-md-4">
                    <strong>Test positif à une maladie</strong>
                    <div>
                        <span class="badge @(Model?.TestePositifPourMaladie == true ? "bg-danger" : "bg-secondary")">
                            @(Model?.TestePositifPourMaladie == true ? "Oui" : "Non")
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3 d-flex flex-column flex-sm-row gap-2">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-danger">
            <i class="fas fa-edit"></i> Modifier
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour à la liste
        </a>
    </div>
</div>
