@using SGDS_Web.ViewModels.Dossiers
@model CreerModifierDossier

@{
    ViewData["Title"] = "Modifier le dossier";
}

<div class="container mt-4">
    <h3 class="mb-4">
        <i class="fas fa-folder-open text-danger me-2"></i>Modifier le dossier
    </h3>

    <form asp-action="Edit">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="DonneurId" class="form-label">Donneur</label>
                <select asp-for="DonneurId" asp-items="Model.Donneurs" class="form-select js-select2">
                    <option value="">-- Sélectionnez un donneur --</option>
                </select>
                <span asp-validation-for="DonneurId" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3 form-check pt-4">
                <label class="form-check-label" asp-for="MaladieChronique"></label>
                <input class="form-check-input" asp-for="MaladieChronique" id="MaladieChronique" />
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="DetailsMaladieChronique" class="form-label"></label>
                <input asp-for="DetailsMaladieChronique" class="form-control" />
                <span asp-validation-for="DetailsMaladieChronique" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3 form-check pt-4">
                <label class="form-check-label" asp-for="EstAnemie"></label>
                <input class="form-check-input" asp-for="EstAnemie" id="EstAnemie" />
            </div>

            <div class="col-md-6 mb-3 form-check pt-4">
                <label class="form-check-label" asp-for="EstEnceinte"></label>
                <input class="form-check-input" asp-for="EstEnceinte" id="EstEnceinte" />
            </div>

            <div class="col-md-6 mb-3 form-check pt-4">
                <label class="form-check-label" asp-for="InfectionRecente"></label>
                <input class="form-check-input" asp-for="InfectionRecente" id="InfectionRecente" />
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="DateInfectionRecente" class="form-label"></label>
                <input asp-for="DateInfectionRecente" class="form-control" type="date" />
                <span asp-validation-for="DateInfectionRecente" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="PriseDeMedicamentsActuel" class="form-label"></label>
                <input asp-for="PriseDeMedicamentsActuel" class="form-control" />
                <span asp-validation-for="PriseDeMedicamentsActuel" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-4">
                <label asp-for="Poids" class="form-label">Poids (kg)</label>
                <input asp-for="Poids" class="form-control" type="number" min="0" step="0.1" />
                <span asp-validation-for="Poids" class="text-danger"></span>
            </div>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-save me-1"></i> Enregistrer
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">Retour à la liste</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(function () {
            $('.js-select2').select2({
                placeholder: "Sélectionner un donneur",
                allowClear: true,
                width: '100%'
            });
        });
    </script>
}

