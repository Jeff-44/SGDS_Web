@using SGDS_Web.ViewModels.Dossiers
@model IEnumerable<DossierVM>

@{
    ViewData["Title"] = "Dossiers";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0"><i class="fas fa-folder-open text-danger me-2"></i>Dossiers</h2>
        <a asp-action="Create" class="btn btn-danger">
            <i class="fas fa-plus me-1"></i> Nouveau dossier
        </a>
    </div>

    <div class="table-responsive shadow-sm border rounded">
        <table class="table table-bordered table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Donneur (NIF)</th>
                    <th>Maladie Chronique</th>
                    <th>Détails Maladie</th>
                    <th>Anémie</th>
                    <th>Enceinte</th>
                    <th>Infection Récente</th>
                    <th>Date Infection</th>
                    <th>Médicaments Actuels</th>
                    <th>Poids (kg)</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Donneur?.NIF</td>
                        <td>
                            <span class="badge @(item.MaladieChronique ? "bg-danger" : "bg-secondary")">
                                @(item.MaladieChronique ? "Oui" : "Non")
                            </span>
                        </td>
                        <td>@item.DetailsMaladieChronique</td>
                        <td>
                            <span class="badge @(item.EstAnemie ? "bg-danger" : "bg-secondary")">
                                @(item.EstAnemie ? "Oui" : "Non")
                            </span>
                        </td>
                        <td>
                            <span class="badge @(item.EstEnceinte ? "bg-danger" : "bg-secondary")">
                                @(item.EstEnceinte ? "Oui" : "Non")
                            </span>
                        </td>
                        <td>
                            <span class="badge @(item.InfectionRecente ? "bg-danger" : "bg-secondary")">
                                @(item.InfectionRecente ? "Oui" : "Non")
                            </span>
                        </td>
                        <td>@item.DateInfectionRecente?.ToString("dd/MM/yyyy")</td>
                        <td>@item.PriseDeMedicamentsActuel</td>
                        <td>@item.Poids</td>
                        <td class="text-end">
                        <td class="text-end">
                            <div class="d-flex justify-content-end gap-1">
                                <a asp-action="Edit" asp-route-idDossier="@item.Id" class="btn btn-sm btn-outline-primary" title="Modifier">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Details" asp-route-idDossier="@item.Id" class="btn btn-sm btn-outline-info" title="Détails">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                                <a asp-action="Delete" asp-route-idDossier="@item.Id" class="btn btn-sm btn-outline-danger" title="Supprimer">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
