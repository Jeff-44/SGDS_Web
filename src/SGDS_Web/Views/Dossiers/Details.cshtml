@using SGDS_Web.ViewModels.Dossiers
@model DossierVM

@{
    ViewData["Title"] = "Détails du dossier";
}

<div class="container mt-4">
    <h3 class="mb-4">
        <i class="fas fa-folder-open text-danger me-2"></i>Détails du dossier
    </h3>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="row g-4">
                <!-- Donneur -->
                <div class="col-md-4">
                    <strong>Donneur (NIF)</strong>
                    <div>@(Model?.Donneur?.NIF ?? "-")</div>
                </div>

                <!-- Maladie chronique -->
                <div class="col-md-4">
                    <strong>Maladie chronique</strong>
                    <div>
                        <span class="badge @(Model?.MaladieChronique == true ? "bg-danger" : "bg-secondary")">
                            @(Model?.MaladieChronique == true ? "Oui" : "Non")
                        </span>
                    </div>
                </div>

                <!-- Détails maladie -->
                <div class="col-md-4">
                    <strong>Détails maladie</strong>
                    <div>@(Model?.DetailsMaladieChronique ?? "-")</div>
                </div>

                <!-- Anémie -->
                <div class="col-md-4">
                    <strong>Anémie</strong>
                    <div>
                        <span class="badge @(Model?.EstAnemie == true ? "bg-danger" : "bg-secondary")">
                            @(Model?.EstAnemie == true ? "Oui" : "Non")
                        </span>
                    </div>
                </div>

                <!-- Enceinte -->
                <div class="col-md-4">
                    <strong>Enceinte</strong>
                    <div>
                        <span class="badge @(Model?.EstEnceinte == true ? "bg-danger" : "bg-secondary")">
                            @(Model?.EstEnceinte == true ? "Oui" : "Non")
                        </span>
                    </div>
                </div>

                <!-- Infection récente -->
                <div class="col-md-4">
                    <strong>Infection récente</strong>
                    <div>
                        <span class="badge @(Model?.InfectionRecente == true ? "bg-danger" : "bg-secondary")">
                            @(Model?.InfectionRecente == true ? "Oui" : "Non")
                        </span>
                    </div>
                </div>

                <!-- Date infection -->
                <div class="col-md-4">
                    <strong>Date infection</strong>
                    <div>@(Model?.DateInfectionRecente?.ToString("dd/MM/yyyy") ?? "-")</div>
                </div>

                <!-- Médicaments actuels -->
                <div class="col-md-4">
                    <strong>Médicaments actuels</strong>
                    <div>@(Model?.PriseDeMedicamentsActuel ?? "-")</div>
                </div>

                <!-- Poids -->
                <div class="col-md-4">
                    <strong>Poids (kg)</strong>
                    <div>@(Model?.Poids.ToString() ?? "-")</div>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3 d-flex flex-column flex-sm-row gap-2">
        <a asp-action="Edit" asp-route-idDossier="@Model?.Id" class="btn btn-danger">
            <i class="fas fa-edit"></i> Modifier
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour à la liste
        </a>
    </div>
</div>
