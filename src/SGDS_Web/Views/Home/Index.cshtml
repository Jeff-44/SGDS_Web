@{
    ViewData["Title"] = "Accueil";
    Layout = "_LoginLayout"; // ou ton layout principal
}

<style>
    /* ======== HERO ======== */
    .hero {
        position: relative;
        padding: 6rem 1rem 4rem;
        background: linear-gradient(135deg, rgba(220,53,69,.08), rgba(0,0,0,.03));
        overflow: hidden;
    }

        .hero:after {
            content: "";
            position: absolute;
            inset: -20%;
            background: radial-gradient(50% 50% at 50% 50%, rgba(220,53,69,.12) 0%, rgba(0,0,0,0) 60%);
            transform: rotate(15deg);
            pointer-events: none;
        }

        .hero .lead {
            max-width: 720px;
            margin: 0 auto;
        }

    /* ======== CAROUSEL ======== */
    .activity-caption {
        background: rgba(0,0,0,.45);
        border-radius: .5rem;
        padding: .75rem 1rem;
        backdrop-filter: blur(2px);
    }

    .carousel-item img {
        object-fit: cover;
        height: 420px; /* ajuste la hauteur */
        width: 100%;
    }

    /* ======== PARTENAIRES MARQUEE ======== */
    .partners {
        background: #fff;
        padding: 2.5rem 0;
        overflow: hidden;
        position: relative;
    }

        .partners:before, .partners:after {
            content: "";
            position: absolute;
            top: 0;
            bottom: 0;
            width: 60px;
            pointer-events: none;
            z-index: 2;
        }

        .partners:before {
            left: 0;
            background: linear-gradient(90deg, #fff, transparent);
        }

        .partners:after {
            right: 0;
            background: linear-gradient(270deg, #fff, transparent);
        }

    .partners-track {
        display: flex;
        gap: 3rem;
        animation: slideLogos 22s linear infinite;
        will-change: transform;
    }

        .partners-track:hover {
            animation-play-state: paused;
        }

    .partners-logo {
        height: 54px;
        width: auto;
        filter: grayscale(100%);
        opacity: .8;
        transition: filter .2s ease, opacity .2s ease, transform .2s ease;
    }

        .partners-logo:hover {
            filter: grayscale(0%);
            opacity: 1;
            transform: translateY(-2px);
        }

    @@keyframes slideLogos {
        0%

    {
        transform: translateX(0);
    }

    100% {
        transform: translateX(-50%);
    }
    /* car on duplique la liste */
    }

    /* ======== TEMOIGNAGES ======== */
    .testimonials .card {
        border: 0;
        box-shadow: 0 10px 30px rgba(0,0,0,.06);
        border-radius: 1rem;
        height: 100%;
    }

    .quote-mark {
        font-size: 2.25rem;
        line-height: 1;
        color: #dc3545;
    }
</style>

<!-- ================= HERO ================= -->
<section class="hero text-center">
    <div class="container">
        <h1 class="display-5 fw-bold mb-3 text-danger">Notre mission, notre impact</h1>
        <p class="lead text-muted">
            Nous mobilisons donneurs, centres de santé et communautés pour sauver des vies.
            Transparence, efficacité et proximité guident chacune de nos actions.
        </p>
        <div class="d-flex gap-2 justify-content-center mt-4">
            <a asp-controller="Don" asp-action="PrendreRendezVous" class="btn btn-danger btn-lg rounded-3">
                Donner maintenant
            </a>
            <a asp-controller="Home" asp-action="About" class="btn btn-outline-secondary btn-lg rounded-3">
                En savoir plus
            </a>
        </div>

        <div class="row g-3 mt-5">
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-sm rounded-4">
                    <div class="card-body p-4">
                        <h5 class="fw-semibold mb-2">Notre mission</h5>
                        <p class="text-muted mb-0">
                            Garantir la disponibilité du sang à travers une plateforme fiable qui connecte les donneurs
                            aux centres, simplifie la logistique et favorise la sensibilisation.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-sm rounded-4">
                    <div class="card-body p-4">
                        <h5 class="fw-semibold mb-2">Notre vision</h5>
                        <p class="text-muted mb-0">
                            Une communauté où chaque personne a accès au sang à temps, grâce à la solidarité, la data et l’innovation.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-4">
                <div class="card h-100 border-0 shadow-sm rounded-4">
                    <div class="card-body p-4">
                        <h5 class="fw-semibold mb-2">Nos valeurs</h5>
                        <ul class="text-muted mb-0 ps-3">
                            <li>Engagement &amp; solidarité</li>
                            <li>Transparence &amp; respect</li>
                            <li>Excellence &amp; innovation</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>

<!-- ================= CAROUSEL D'ACTIVITÉS ================= -->
<section class="py-5">
    <div class="container">
        <div id="activitesCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#activitesCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#activitesCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#activitesCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>

            <div class="carousel-inner rounded-4 shadow">
                <div class="carousel-item active">
                    <img src="/images/activites/collecte-1.jpg" alt="Collecte mobile - Centre Ville">
                    <div class="carousel-caption d-none d-md-block activity-caption">
                        <h5>Collecte mobile — Centre Ville</h5>
                        <p>Plus de 120 donneurs mobilisés ce week-end.</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="/images/activites/sensibilisation-ecole.jpg" alt="Séance de sensibilisation en milieu scolaire">
                    <div class="carousel-caption d-none d-md-block activity-caption">
                        <h5>Sensibilisation — Lycée National</h5>
                        <p>Ateliers et inscriptions de nouveaux donneurs.</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="/images/activites/formation-staff.jpg" alt="Formation des équipes partenaires">
                    <div class="carousel-caption d-none d-md-block activity-caption">
                        <h5>Formation des partenaires</h5>
                        <p>Renforcement de capacités pour un meilleur accueil des donneurs.</p>
                    </div>
                </div>
            </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#activitesCarousel" data-bs-slide="prev" aria-label="Précédent">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#activitesCarousel" data-bs-slide="next" aria-label="Suivant">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
            </button>
        </div>
    </div>
</section>

<!-- ================= PARTENAIRES ================= -->
<section class="partners">
    <div class="container">
        <h3 class="text-center mb-4">Ils nous font confiance</h3>

        <!-- Piste doublée pour boucle parfaite -->
        <div class="d-flex" style="gap:3rem; white-space:nowrap;">
            <div class="partners-track">
                <img class="partners-logo" src="/images/partners/partner1.png" alt="Partenaire 1">
                <img class="partners-logo" src="/images/partners/partner2.png" alt="Partenaire 2">
                <img class="partners-logo" src="/images/partners/partner3.png" alt="Partenaire 3">
                <img class="partners-logo" src="/images/partners/partner4.png" alt="Partenaire 4">
                <img class="partners-logo" src="/images/partners/partner5.png" alt="Partenaire 5">
                <img class="partners-logo" src="/images/partners/partner6.png" alt="Partenaire 6">
                <!-- Duplique la même série -->
                <img class="partners-logo" src="/images/partners/partner1.png" alt="Partenaire 1">
                <img class="partners-logo" src="/images/partners/partner2.png" alt="Partenaire 2">
                <img class="partners-logo" src="/images/partners/partner3.png" alt="Partenaire 3">
                <img class="partners-logo" src="/images/partners/partner4.png" alt="Partenaire 4">
                <img class="partners-logo" src="/images/partners/partner5.png" alt="Partenaire 5">
                <img class="partners-logo" src="/images/partners/partner6.png" alt="Partenaire 6">
            </div>
        </div>
    </div>
</section>

<!-- ================= TÉMOIGNAGES ================= -->
