@section Scripts {
    <script>
        // Démarrage du carousel avec intervalle et pause au survol
        const carouselEl = document.getElementById('activitesCarousel');
        if (carouselEl) {
            const carousel = new bootstrap.Carousel(carouselEl, {
                interval: 5000,
                ride: false,
                pause: 'hover',
                touch: true,
                wrap: true
            });
        }
    </script>
}
