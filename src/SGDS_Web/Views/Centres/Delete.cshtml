@model SGDS_Web.ViewModels.Centres.CentreVM

@{
    ViewData["Title"] = "Suppression du centre";
}

<div class="container mt-4">
    <h3 class="mb-4">
        <i class="fas fa-hospital-alt text-danger me-2"></i>Suppression du centre
    </h3>

    <div class="alert alert-warning">
        <strong>Attention !</strong> Êtes-vous sûr de vouloir supprimer ce centre ? Cette action est irréversible.
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="row g-4">
                @* Code (décommenter si nécessaire)
                <div class="col-md-4">
                    <strong>Code</strong>
                    <div>@(Model?.Code ?? "-")</div>
                </div> *@

                <div class="col-md-4">
                    <strong>Nom du centre</strong>
                    <div>@(Model?.NomCentre ?? "-")</div>
                </div>

                <div class="col-md-4">
                    <strong>Type de centre</strong>
                    <div>@(Model?.TypeCentre ?? "-")</div>
                </div>

                <div class="col-md-4">
                    <strong>Commune</strong>
                    <div>@(Model?.Commune?.Nom ?? "-")</div>
                </div>
            </div>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-3 d-flex flex-column flex-sm-row gap-2">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash-alt"></i> Supprimer
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour à la liste
        </a>
    </form>
</div>
