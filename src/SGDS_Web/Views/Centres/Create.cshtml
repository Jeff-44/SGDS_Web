@using System.Text.Json
@model SGDS_Web.ViewModels.Centres.CreerModifierCentre

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<h4>Centre</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @* <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <label asp-for="NomCentre" class="control-label"></label>
                <input asp-for="NomCentre" class="form-control" />
                <span asp-validation-for="NomCentre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeCentre" class="control-label"></label>
                <input asp-for="TypeCentre" class="form-control" />
                <span asp-validation-for="TypeCentre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartementId" class="control-label"></label>
                <select asp-for="DepartementId" 
                    class="form-control" 
                    id="departementSelect"
                    asp-items="@Model.Departements">
                    <option>--Selectionner un département--</option>
                </select>
                <span asp-validation-for="DepartementId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArrondissementId" class="control-label"></label>
                <select asp-for="ArrondissementId" 
                    class="form-control"
                    id="arrondissementSelect">
                    <option>--Selectionner un arrondissement--</option>
                </select>
                <span asp-validation-for="ArrondissementId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CommuneId" class="control-label"></label>
                <select asp-for="CommuneId" 
                    class="form-control" 
                    id="communeSelect">
                   <option>--Selectionner une commune--</option>
                </select>
                <span asp-validation-for="CommuneId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<script>
    const allArrondissements = @Html.Raw(JsonSerializer.Serialize(Model.Arrondissements));
    const allCommunes        = @Html.Raw(JsonSerializer.Serialize(Model.Communes));
</script>

@section Scripts {

    <script>
        $(function(){
          // When departement changes → filter arrondissements
          $('#departementSelect').on('change', function(){
            const depId = +this.value; // unary + ensures we get a number
            $('#arrondissementSelect')
              .empty()
              .append('<option value="">--Sélectionner un arrondissement--</option>');
            $('#communeSelect')
              .empty()
              .append('<option value="">--Sélectionner une commune--</option>');

            if (!depId) return;

            allArrondissements
              .filter(a => a.DepartementId === depId)
              .forEach(a => {
                // backtick template literal → inject values
                $('#arrondissementSelect')
                  .append(`<option value="${a.Id}">${a.Nom}</option>`);
              });
          });

          // When arrondissement changes → filter communes
          $('#arrondissementSelect').on('change', function(){
            const arrId = +this.value;
            $('#communeSelect')
              .empty()
              .append('<option value="">--Sélectionner une commune--</option>');

            if (!arrId) return;

            allCommunes
              .filter(c => c.ArrondissementId === arrId)
              .forEach(c => {
                $('#communeSelect')
                  .append(`<option value="${c.Id}">${c.Nom}</option>`);
              });
          });
        });
    </script>


    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
