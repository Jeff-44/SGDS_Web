@using SGDS_Web.ViewModels.Donneurs
@model DonneurVM

@{
    ViewData["Title"] = "Supprimer Donneur";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-light border-bottom d-flex align-items-center">
            <i class="fas fa-user-times me-2 text-danger"></i>
            <h5 class="mb-0">Confirmer la suppression</h5>
        </div>

        <div class="card-body">
            <p class="text-danger fw-semibold">
                Êtes-vous sûr de vouloir supprimer ce donneur ? Cette action est irréversible.
            </p>

            <dl class="row">
                <dt class="col-sm-3">Nom</dt>
                <dd class="col-sm-9">@Model.Nom</dd>

                <dt class="col-sm-3">Prénom</dt>
                <dd class="col-sm-9">@Model.Prenom</dd>

                <dt class="col-sm-3">CIN</dt>
                <dd class="col-sm-9">@Model.CIN</dd>

                <dt class="col-sm-3">NIF</dt>
                <dd class="col-sm-9">@Model.NIF</dd>

                <dt class="col-sm-3">Sexe</dt>
                <dd class="col-sm-9">@Model.Sexe</dd>

                <dt class="col-sm-3">Date de naissance</dt>
                <dd class="col-sm-9">@Model.DateNaissance</dd>

                <dt class="col-sm-3">Groupe sanguin</dt>
                <dd class="col-sm-9">@Model.GroupeSanguin</dd>

                <dt class="col-sm-3">Statut matrimonial</dt>
                <dd class="col-sm-9">@Model.StatutMatrimonial</dd>

                <dt class="col-sm-3">Occupation</dt>
                <dd class="col-sm-9">@Model.Occupation</dd>

                <dt class="col-sm-3">Adresse</dt>
                <dd class="col-sm-9">@Model.Adresse</dd>

                <dt class="col-sm-3">Téléphone</dt>
                <dd class="col-sm-9">@Model.Telephone</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="mt-4">
                    <button type="submit" class="btn btn-danger me-2">
                        <i class="fas fa-trash-alt me-1"></i> Supprimer
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Retour à la liste
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
