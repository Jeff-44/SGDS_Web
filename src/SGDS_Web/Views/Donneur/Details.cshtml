@using SGDS_Web.ViewModels.Donneurs
@model DonneurVM

@{
    ViewData["Title"] = "Détails du Donneur";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-light border-bottom d-flex align-items-center">
            <i class="fas fa-user me-2 text-danger"></i>
            <h5 class="mb-0">Détails du Donneur</h5>
        </div>

        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6"><strong>Groupe Sanguin:</strong> @Model.GroupeSanguin</div>
                <div class="col-md-6"><strong>CIN:</strong> @Model.CIN</div>
                <div class="col-md-6"><strong>NIF:</strong> @Model.NIF</div>
                <div class="col-md-6"><strong>Nom:</strong> @Model.Nom</div>
                <div class="col-md-6"><strong>Prénom:</strong> @Model.Prenom</div>
                <div class="col-md-6"><strong>Sexe:</strong> @Model.Sexe</div>
                <div class="col-md-6"><strong>Date de Naissance:</strong> @Model.DateNaissance.ToShortDateString()</div>
                <div class="col-md-6"><strong>Statut Matrimonial:</strong> @Model.StatutMatrimonial</div>
                <div class="col-md-6"><strong>Occupation:</strong> @Model.Occupation</div>
                <div class="col-md-6"><strong>Adresse:</strong> @Model.Adresse</div>
                <div class="col-md-6"><strong>Téléphone:</strong> @Model.Telephone</div>
                <div class="col-md-6"><strong>Email:</strong> @Model.Email</div>
                <div class="col-md-6"><strong>Éligible:</strong> @(Model.EstEligible ? "Oui" : "Non")</div>
            </div>

            <div class="mt-4">
                <a class="btn btn-outline-danger me-2" asp-action="Edit" asp-route-id="@Model.Id">
                    <i class="fas fa-edit me-1"></i> Modifier
                </a>
                <a class="btn btn-secondary" asp-action="Index">
                    <i class="fas fa-arrow-left me-1"></i> Retour à la liste
                </a>
            </div>

            <hr />

            <div class="mt-3">
                <a class="btn btn-outline-primary me-2" asp-action="Create" asp-controller="Dossiers" asp-route-donneurId="@Model.Id">
                    <i class="fas fa-folder-plus me-1"></i> Ajouter un dossier
                </a>
                <a class="btn btn-outline-info me-2" asp-action="Details" asp-controller="Dossiers" asp-route-donneurId="@Model.Id">
                    <i class="fas fa-folder-open me-1"></i> Voir le dossier
                </a>
                <a class="btn btn-outline-success" asp-action="Create" asp-controller="Dons" asp-route-donneurId="@Model.Id">
                    <i class="fas fa-tint me-1"></i> Ajouter un don
                </a>
            </div>
        </div>
    </div>
</div>
