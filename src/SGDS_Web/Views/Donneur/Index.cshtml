@using SGDS_Web.ViewModels.Donneurs
@model IEnumerable<DonneurVM>

@{
    ViewData["Title"] = "Liste des donneurs";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0"><i class="fas fa-users me-2 text-danger"></i>Donneurs</h3>
        <a asp-action="Create" class="btn btn-danger">
            <i class="fas fa-plus me-1"></i> Nouveau donneur
        </a>
    </div>

    <div class="table-responsive shadow-sm border rounded">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.CIN)</th>
                    <th>@Html.DisplayNameFor(model => model.NIF)</th>
                    <th>@Html.DisplayNameFor(model => model.Nom)</th>
                    <th>@Html.DisplayNameFor(model => model.Prenom)</th>
                    <th>@Html.DisplayNameFor(model => model.Sexe)</th>
                    <th>@Html.DisplayNameFor(model => model.DateNaissance)</th>
                    <th>@Html.DisplayNameFor(model => model.GroupeSanguin)</th>
                    <th>@Html.DisplayNameFor(model => model.Telephone)</th>
                    <th>@Html.DisplayNameFor(model => model.EstEligible)</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CIN</td>
                        <td>@item.NIF</td>
                        <td>@item.Nom</td>
                        <td>@item.Prenom</td>
                        <td>@item.Sexe</td>
                        <td>@item.DateNaissance.ToString("dd/MM/yyyy")</td>
                        <td>@item.GroupeSanguin</td>
                        <td>@item.Telephone</td>
                        <td>
                            @if (item.EstEligible)
                            {
                                <span class="badge bg-success">Oui</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Non</span>
                            }
                        </td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1" title="Modifier">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info me-1" title="Détails">
                                <i class="fas fa-info-circle"></i>
                            </a>
                            <a asp-action="Details" asp-controller="Dossiers" asp-route-donneurId="@item.Id" class="btn btn-sm btn-outline-secondary me-1" title="Dossier">
                                <i class="fas fa-folder"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Supprimer">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
