@using SGDS_Web.ViewModels.Users
@model UserVM

@{
    ViewData["Title"] = "Suppression de l'utilisateur";
}

<div class="container mt-4">
    <h3 class="mb-4">
        <i class="fas fa-user text-danger me-2"></i>Suppression de l'utilisateur
    </h3>

    <div class="alert alert-warning">
        <strong>Attention !</strong> Êtes-vous sûr de vouloir supprimer cet utilisateur ? Cette action est irréversible.
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="row g-4">

                <div class="col-md-6">
                    <strong>Nom complet</strong>
                    <div>
                        @{
                            var fullName = string.Join(" ",
                            new[] { Model?.FirstName, Model?.LastName }
                            .Where(s => !string.IsNullOrWhiteSpace(s))
                            );
                        }
                        @(string.IsNullOrWhiteSpace(fullName) ? "-" : fullName)
                    </div>
                </div>

                <div class="col-md-6">
                    <strong>Email</strong>
                    <div>@(Model?.Email ?? "-")</div>
                </div>

                <div class="col-md-6">
                    <strong>Téléphone</strong>
                    <div>@(Model?.PhoneNumber ?? "-")</div>
                </div>

                <div class="col-md-6">
                    <strong>Dernière connexion</strong>
                    @* <div>@(Model?.LastLogin?.ToString("dd/MM/yyyy HH:mm") ?? "-")</div> *@
                </div>

               @*  @if (Model?.Roles != null && Model.Roles.Any())
                {
                    <div class="col-12">
                        <strong>Rôles</strong>
                        <div>
                            @foreach (var role in Model.Roles)
                            {
                                <span class="badge bg-secondary me-1">@role</span>
                            }
                        </div>
                    </div>
                }

            </div> *@
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-3 d-flex flex-column flex-sm-row gap-2">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash-alt"></i> Supprimer
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour à la liste
        </a>
    </form>
</div>
