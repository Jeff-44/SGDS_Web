@using SGDS_Web.ViewModels.Users
@model IEnumerable<UserVM>

@{
    ViewData["Title"] = "Utilisateurs";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">
            <i class="fas fa-users text-danger me-2"></i>Utilisateurs
        </h3>
        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-danger">
            <i class="fas fa-user-plus"></i> Nouveau
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(m => m.Email)</th>
                            <th>Nom complet</th>
                            <th>@Html.DisplayNameFor(m => m.PhoneNumber)</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                var fullName = string.Join(" ", new[] { item?.FirstName, item?.LastName }.Where(s => !string.IsNullOrWhiteSpace(s)));
                                <tr>
                                    <td>@(item?.Email ?? "-")</td>
                                    <td>@(string.IsNullOrWhiteSpace(fullName) ? "-" : fullName)</td>
                                    <td>@(item?.PhoneNumber ?? "-")</td>
                                    <td>
                                        <div class="d-flex flex-column flex-sm-row gap-2 justify-content-sm-end">
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">
                                                <i class="fas fa-eye"></i> Détails
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                                <i class="fas fa-edit"></i> Modifier
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">
                                                <i class="fas fa-trash-alt"></i> Supprimer
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted py-4">
                                    Aucun utilisateur trouvé.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
