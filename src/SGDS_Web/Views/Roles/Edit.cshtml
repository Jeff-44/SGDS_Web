@using SGDS_Web.ViewModels.Users
@model CreerModifierRole

@{
    ViewData["Title"] = "Modifier un rôle";
}

<div class="container mt-4">
    <h3 class="mb-4">
        <i class="fas fa-user-shield text-danger me-2"></i>Modifier un rôle
    </h3>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <form asp-action="Edit" method="post" novalidate>
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Identifiant</label>
                        <input type="text" class="form-control" value="@Model.Id" readonly />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label">Nom du rôle</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-3 d-flex flex-column flex-sm-row gap-2">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-save"></i> Enregistrer
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Retour à la liste
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Optionnel : nettoyage rapide à la saisie (trim)
        (function () {
            const input = document.querySelector('[name="Name"]');
            if (!input) return;
            input.addEventListener('blur', function () {
                this.value = this.value.trim();
            });
            // Pour forcer en MAJUSCULES, décommente :
            // input.addEventListener('input', function(){ this.value = this.value.toUpperCase(); });
        })();
    </script>
}
