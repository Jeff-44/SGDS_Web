@using SGDS_Web.ViewModels.Users
@model IEnumerable<RoleVM>

@{
    ViewData["Title"] = "Rôles";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">
            <i class="fas fa-user-shield text-danger me-2"></i>Rôles
        </h3>
        <a asp-action="Create" class="btn btn-danger">
            <i class="fas fa-plus"></i> Créer un rôle
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(m => m.Id)</th>
                            <th>@Html.DisplayNameFor(m => m.Name)</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Name</td>
                                    <td>
                                        <div class="d-flex flex-column flex-sm-row gap-2 justify-content-sm-end">
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">
                                                <i class="fas fa-eye"></i> Détails
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                                <i class="fas fa-edit"></i> Modifier
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">
                                                <i class="fas fa-trash-alt"></i> Supprimer
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="text-center text-muted py-4">
                                    Aucun rôle trouvé.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
