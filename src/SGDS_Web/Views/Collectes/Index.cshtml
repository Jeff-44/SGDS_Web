@using SGDS_Web.ViewModels.Collectes
@model IEnumerable<CollecteVM>

@{
    ViewData["Title"] = "Collectes";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">
            <i class="fas fa-calendar-alt text-danger me-2"></i>Collectes
        </h3>
        <a asp-action="Create" class="btn btn-danger">
            <i class="fas fa-plus"></i> Créer une collecte
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.DateCollecte)</th>
                            <th>@Html.DisplayNameFor(model => model.Code)</th>
                            <th>@Html.DisplayNameFor(model => model.Libelle)</th>
                            <th>@Html.DisplayNameFor(model => model.Centre)</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@(item?.DateCollecte.ToString("dd/MM/yyyy") ?? "-")</td>
                                    <td>@(item?.Code ?? "-")</td>
                                    <td>@(item?.Libelle ?? "-")</td>
                                    <td>@(item?.Centre?.NomCentre ?? "-")</td>
                                    <td>
                                        <div class="d-flex flex-column flex-sm-row gap-2 justify-content-sm-end">
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">
                                                <i class="fas fa-eye"></i> Détails
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                                <i class="fas fa-edit"></i> Modifier
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">
                                                <i class="fas fa-trash-alt"></i> Supprimer
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted py-4">
                                    Aucune collecte trouvée.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
