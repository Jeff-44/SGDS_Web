@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Mot de passe oublié";
    Layout = "_LoginLayout";
}

<div class="row w-100 justify-content-center m-0">
    <div class="col-12 col-sm-10 col-md-8 col-lg-5 col-xl-4 p-0">

        <!-- Carte mot de passe oublié -->
        <div class="card login-card border-0 shadow-lg rounded-4">
            <div class="card-body p-4 p-md-5 text-center">

                <!-- Logo -->
                <img src="~/images/logo.png" alt="Logo" class="mb-3" style="max-height:64px;">

                <!-- Titre -->
                <h2 class="mb-1 text-danger fw-semibold">Mot de passe oublié ?</h2>
                <p class="text-muted mb-4">
                    Entrez votre adresse e-mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                </p>

                <form method="post" asp-antiforgery="true" novalidate class="text-start">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email"
                               class="form-control"
                               autocomplete="username"
                               aria-required="true"
                               placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <!-- Bouton principal -->
                    <button type="submit" class="w-100 btn btn-lg btn-danger rounded-3">
                        Réinitialiser le mot de passe
                    </button>

                    <div class="mt-3 small text-center">
                        <a asp-page="./Login" class="text-decoration-none">Retour à la connexion</a>
                    </div>
                </form>

            </div>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
