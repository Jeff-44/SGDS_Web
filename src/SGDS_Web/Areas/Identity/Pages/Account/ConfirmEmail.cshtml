@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirmation de l'email";
    Layout = "_LoginLayout"; // même layout que Login/Register/ForgotPassword
}

<div class="row w-100 justify-content-center m-0">
    <div class="col-12 col-sm-10 col-md-8 col-lg-5 col-xl-4 p-0">

        <div class="card login-card border-0 shadow-lg rounded-4">
            <div class="card-body p-4 p-md-5 text-center">

                <!-- Logo -->
                <img src="~/images/logo.png" alt="Logo" class="mb-3" style="max-height:64px;">

                <!-- Titre -->
                <h2 class="mb-1 fw-semibold text-danger">Confirmation de l'email</h2>

                <!-- Message de statut (fourni par le modèle Identity) -->
                <div class="mt-3 mb-4">
                    <partial name="_StatusMessage" model="Model.StatusMessage" />
                </div>

                <!-- Actions utiles -->
                <div class="d-grid gap-2">
                    <a class="btn btn-danger btn-lg rounded-3"
                       asp-page="./Login"
                       asp-route-returnUrl="@(Url.Content("~/"))">
                        Se connecter
                    </a>

                    <a class="btn btn-outline-secondary rounded-3"
                       asp-page="./ResendEmailConfirmation">
                        Renvoyer l’email de confirmation
                    </a>

                    <a class="btn btn-link text-decoration-none"
                       asp-area=""
                       asp-page="/Index">
                        Retour à l’accueil
                    </a>
                </div>

            </div>
        </div>

    </div>
</div>
