@page
@model RegisterModel

@{
    ViewData["Title"] = "Créer un compte";
    Layout = "_LoginLayout";
}

<div class="row w-100 justify-content-center m-0">
    <div class="col-12 col-sm-10 col-md-8 col-lg-5 col-xl-4 p-0">

        <!-- Carte d'inscription (même design que login) -->
        <div class="card login-card login-card-container border-0">
            <div class="card-body p-4 p-md-5 text-center">

                <!-- Logo -->
                <img src="~/images/logo.png" alt="Logo" class="mb-3" style="max-height:64px;">

                <!-- Titre -->
                <h2 class="mb-1 text-danger fw-semibold">Créer un compte</h2>
                <p class="text-muted mb-4">Rejoignez la plateforme en toute simplicité</p>

                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" asp-antiforgery="true" novalidate class="text-start">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email"
                               class="form-control"
                               autocomplete="username"
                               aria-required="true"
                               placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3 position-relative">
                        <input asp-for="Input.Password"
                               type="password"
                               class="form-control"
                               autocomplete="new-password"
                               aria-required="true"
                               placeholder="Mot de passe"
                               id="passwordInput" />
                        <label asp-for="Input.Password">Mot de passe</label>
                        <!-- Bouton œil -->
                        <button type="button"
                                class="btn btn-sm btn-outline-secondary position-absolute top-50 end-0 translate-middle-y me-2"
                                id="togglePwd" tabindex="-1" aria-label="Afficher/Masquer le mot de passe">
                            <i class="fas fa-eye"></i>
                        </button>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3 position-relative">
                        <input asp-for="Input.ConfirmPassword"
                               type="password"
                               class="form-control"
                               autocomplete="new-password"
                               aria-required="true"
                               placeholder="Confirmer le mot de passe"
                               id="confirmPasswordInput" />
                        <label asp-for="Input.ConfirmPassword">Confirmer le mot de passe</label>
                        <!-- Bouton œil -->
                        <button type="button"
                                class="btn btn-sm btn-outline-secondary position-absolute top-50 end-0 translate-middle-y me-2"
                                id="toggleConfirmPwd" tabindex="-1" aria-label="Afficher/Masquer la confirmation">
                            <i class="fas fa-eye"></i>
                        </button>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <select asp-for="Input.CentreId"
                                class="form-select"
                                asp-items="@Model.Centres">
                            <option value="">-- Sélectionner un centre --</option>
                        </select>
                        <label asp-for="Input.CentreId">Centre</label>
                        <span asp-validation-for="Input.CentreId" class="text-danger"></span>
                    </div>

                    <!-- Bouton principal (même style que login) -->
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-danger rounded-3">
                        Créer le compte
                    </button>

                    <div class="mt-3 small text-center">
                        <p class="mb-1">
                            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Déjà un compte ? Se connecter</a>
                        </p>
                    </div>
                </form>

                @* Connexions externes (optionnel) : même rendu que Login *@
                <hr class="my-4" />
                @{
                    if ((Model.ExternalLogins?.Count ?? 0) > 0)
                    {
                        <form id="external-account"
                              asp-page="./ExternalLogin"
                              asp-route-returnUrl="@Model.ReturnUrl"
                              method="post" class="text-center">
                            <div class="d-grid gap-2">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit"
                                            class="btn btn-outline-secondary rounded-3"
                                            name="provider"
                                            value="@provider.Name"
                                            title="S'inscrire avec @provider.DisplayName">
                                        @provider.DisplayName
                                    </button>
                                }
                            </div>
                        </form>
                    }
                }
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            // Œil mot de passe
            const btn = document.getElementById('togglePwd');
            const input = document.getElementById('passwordInput');
            if (btn && input) {
                btn.addEventListener('click', function () {
                    const isPwd = input.type === 'password';
                    input.type = isPwd ? 'text' : 'password';
                    const icon = btn.querySelector('i');
                    if (icon) {
                        icon.classList.toggle('fa-eye');
                        icon.classList.toggle('fa-eye-slash');
                    }
                });
            }

            // Œil confirmation
            const btn2 = document.getElementById('toggleConfirmPwd');
            const input2 = document.getElementById('confirmPasswordInput');
            if (btn2 && input2) {
                btn2.addEventListener('click', function () {
                    const isPwd = input2.type === 'password';
                    input2.type = isPwd ? 'text' : 'password';
                    const icon = btn2.querySelector('i');
                    if (icon) {
                        icon.classList.toggle('fa-eye');
                        icon.classList.toggle('fa-eye-slash');
                    }
                });
            }
        })();
    </script>
}
