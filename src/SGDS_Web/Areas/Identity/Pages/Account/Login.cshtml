@page
@model LoginModel

@{
    ViewData["Title"] = "Connexion";
    Layout = "_LoginLayout";
}

<div class="row w-100 justify-content-center m-0">
    <div class="col-12 col-sm-10 col-md-8 col-lg-5 col-xl-4 p-0">

        <!-- Carte de connexion -->
        <div class="card login-card login-card-container border-0">
            <div class="card-body p-4 p-md-5 text-center">

                <!-- Logo -->
                <img src="~/images/logo.png" alt="Logo" class="mb-3" style="max-height:64px;">

                <!-- Titre -->
                <h2 class="mb-1 text-danger fw-semibold">Connexion</h2>
                <p class="text-muted mb-4">Accédez à votre espace en toute sécurité</p>

                <form id="account" method="post" asp-antiforgery="true" novalidate class="text-start">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email"
                               class="form-control"
                               autocomplete="username"
                               aria-required="true"
                               placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3 position-relative">
                        <input asp-for="Input.Password"
                               type="password"
                               class="form-control"
                               autocomplete="current-password"
                               aria-required="true"
                               placeholder="Mot de passe"
                               id="passwordInput" />
                        <label asp-for="Input.Password">Mot de passe</label>

                        <!-- Bouton œil -->
                        <button type="button"
                                class="btn btn-sm btn-outline-secondary position-absolute top-50 end-0 translate-middle-y me-2"
                                id="togglePwd" tabindex="-1" aria-label="Afficher/Masquer le mot de passe">
                            <i class="fas fa-eye"></i>
                        </button>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3 text-center">
                        <input class="form-check-input" asp-for="Input.RememberMe" id="rememberMe" />
                        <label class="form-check-label" for="rememberMe">
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>

                    <!-- Bouton principal -->
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-danger rounded-3">
                        Se connecter
                    </button>

                    <div class="mt-3 small text-center">
                        <p class="mb-1">
                            <a id="forgot-password" asp-page="./ForgotPassword">Mot de passe oublié ?</a>
                        </p>
                        <p class="mb-1">
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Créer un compte</a>
                        </p>
                        <p class="mb-0">
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Renvoyer la confirmation par email</a>
                        </p>
                    </div>
                </form>

                @* Connexions externes (optionnel) *@
                <hr class="my-4" />
                @{
                    if ((Model.ExternalLogins?.Count ?? 0) > 0)
                    {
                        <form id="external-account"
                              asp-page="./ExternalLogin"
                              asp-route-returnUrl="@Model.ReturnUrl"
                              method="post" class="text-center">
                            <div class="d-grid gap-2">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit"
                                            class="btn btn-outline-secondary rounded-3"
                                            name="provider"
                                            value="@provider.Name"
                                            title="Se connecter avec @provider.DisplayName">
                                        @provider.DisplayName
                                    </button>
                                }
                            </div>
                        </form>
                    }
                }
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            // Œil mot de passe
            const btn = document.getElementById('togglePwd');
            const input = document.getElementById('passwordInput');
            if (btn && input) {
                btn.addEventListener('click', function () {
                    const isPwd = input.type === 'password';
                    input.type = isPwd ? 'text' : 'password';
                    const icon = btn.querySelector('i');
                    if (icon) {
                        icon.classList.toggle('fa-eye');
                        icon.classList.toggle('fa-eye-slash');
                    }
                });
            }
        })();
    </script>
}
